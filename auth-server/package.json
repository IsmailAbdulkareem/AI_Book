{
  "name": "ai-book-auth-server",
  "version": "1.0.0",
  "description": "Better Auth server for AI Book chatbot authentication",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "postinstall": "npm run build",
    "start": "node dist/index.js",
    "db:generate": "npx @better-auth/cli generate",
    "db:migrate": "npx @better-auth/cli migrate"
  },
  "dependencies": {
    "better-auth": "^1.2.0",
    "express": "^4.21.0",
    "pg": "^8.13.0",
    "dotenv": "^16.4.0",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "typescript": "^5.6.0",
    "@types/node": "^22.0.0",
    "@types/express": "^5.0.0",
    "@types/cors": "^2.8.17",
    "tsx": "^4.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
